@model IEnumerable<Adonet.Models.EmpModel>
@{
    ViewBag.Title = "Home Page";
}

<p>
    @Html.ActionLink("Add New Employee", "AddEmployee")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
    </tr>
    @foreach(var item in Model)
    {
        @Html.HiddenFor(model =>item.Empid)
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditEmpDetails", new { id = item.Empid})
                @Html.ActionLink("Delete", "DeleteEmpDetails", new { id = item.Empid}, new { onclick = "return confirm('Are sure wants to delete?');"})
            </td>
        </tr>
    }
</table>